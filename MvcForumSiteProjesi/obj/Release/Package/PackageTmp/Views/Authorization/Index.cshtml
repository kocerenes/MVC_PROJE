
@using EntityLayer.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Kullanıcı Mail</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th>Pasif Yap</th>
        <th>Yetkisini Değiştir</th>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <th>@category.AdminID</th>
            <td>@category.AdminUserName</td>
            <td>@category.AdminRole</td>
            <td>Aktif</td>
            <td class="text-center"><a href="/AdminCategory/DeleteCategory/@category.AdminID" class="btn btn-danger  text-center">Pasif Yap</a></td>
            <td class="text-center"><a href="/Authorization/EditAdmin/@category.AdminID" class="btn btn-success">Yetkisini Değiştir</a></td>
        </tr>
    }

</table>

<a href="/Authorization/AddAdmin" class="btn btn-info">Yeni Admin Ekle</a>

