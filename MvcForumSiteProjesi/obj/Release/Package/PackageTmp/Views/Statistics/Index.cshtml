
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>İstatistik Sayfası</h2>
<br />
<div class="container">
    <div class="row">

        <div class="col-3">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem; height:8rem;">
                <div class ="card-header">Toplam Kategori Sayısı</div>
                <div class="card-body">
                    <h5 class="card-title"><b>@ViewBag.totalCategory</b></h5>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;
        height: 8rem;
">
                <div class="card-header">Yazılım Kategorisine Ait Başlık Sayısı</div>
                <div class="card-body">
                    <h5 class="card-title"><b> @ViewBag.titleCount </b></h5>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;
        height: 8rem;
">
                <div class ="card-header">İsminde "a" Harfi Olan Yazar Sayısı</div>
                <div class="card-body">
                    <h5 class="card-title"><b>@ViewBag.isA</b></h5>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;
        height: 8rem;
">
                <div class="card-header">En Fazla Başlığa Sahip Kategori</div>
                <div class="card-body">
                    <h5 class="card-title"><b> @ViewBag.maxHeading </b></h5>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card text-white bg-danger mb-3" style="max-width: 18rem;
        height: 8rem;
">
                <div class="card-header">True - False Farkı</div>
                <div class="card-body">
                    <h5 class="card-title"><b> @ViewBag.difference </b></h5>
                </div>
            </div>
        </div>

    </div>
</div>

