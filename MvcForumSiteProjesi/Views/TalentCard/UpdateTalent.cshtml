
@model EntityLayer.Concrete.TalentCard

@{
    ViewBag.Title = "UpdateTalent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Güncelleme Sayfası</h2>


@using (Html.BeginForm("UpdateTalent", "TalentCard", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-md-5">
            @Html.HiddenFor(x => x.SkillId)
            @Html.Label("Yetenek Adı")
            @Html.TextBoxFor(x => x.Skill1, new { @class = "form-control" })
        </div>
        <br />
        <div class="col-md-5">
            @Html.Label("Oran")
            @Html.EditorFor(x => x.Rate1, new { htmlAttributes = new { @class = "form-control" } })
            <br />
        </div>

        <button class=" btn btn-outline-info">Güncelle</button>
    </div>
}

